files:
  # Este archivo se incluirá en el bloque http (ya que los archivos en conf.d se incluyen dentro del http de nginx.conf)
  "/etc/nginx/conf.d/00_custom.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      server_names_hash_bucket_size 128;

  "/etc/nginx/conf.d/static.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      server {
          listen 80;
          server_name estructura-django-dev.us-east-2.elasticbeanstalk.com;

          # Redirige las solicitudes al backend (Gunicorn)
          location / {
              proxy_pass http://127.0.0.1:8000;
              proxy_set_header Host $host;
              proxy_set_header X-Real-IP $remote_addr;
              proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
              proxy_set_header X-Forwarded-Proto $scheme;
          }

          # Sirve los archivos estáticos
          location /static/ {
              alias /var/app/current/staticfiles/;
          }

          # (Opcional) Sirve archivos de media
          location /media/ {
              alias /var/app/current/media/;
          }

          error_log  /var/log/nginx/error.log;
          access_log /var/log/nginx/access.log;
      }

commands:
  restart_nginx:
    command: "systemctl restart nginx"
